{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2018",
		"lib": [ "es2015" ],
		"declaration": true,
		"outDir": "./dist",
		"sourceMap": true,
		"newLine": "LF",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"incremental": true,
		"strict": true,
		"downlevelIteration": true
	},
	"filesGlob": [
		"src/**/*"
	],
	"exclude": [
        "node_modules",
        "res/**/*",
        "dist/**/*"
    ]
}